<% if flash[:notice] %>
  <div class="notice"><%= flash[:notice] %></div>
<% end %>

<% if @own_profile %>
<div class="ui success message">
  <div class="content">
<div class="header"><%= "Welcome #{@user.first_name}!" %></div>
<p>
  <%= button_to "Edit", edit_user_path(@user.id), :id => "edit_user_button", :class => "ui inverted green button", :method => :get %>
</p>
  </div>
</div>
<% end %>

<div class="small-12 columns">
  <div id="name"><h1 style = "color: teal;"><%= @user.full_name %></h1></div>
</div>

<div class = "small-2 columns">
  <div id="user_info">
  <div id="ui-segment">
    <img class = "ui small circular centered image" src=<%= @user.image %>></div>
  </div>
</div>

<div class = "small-5 columns">
  
  <div id="gender"><h4 class = "ui teal label">Gender:</h4>&nbsp;&nbsp;<%= @user.gender %></div>
  <p> </p>
  <% if @user.address != nil && @user.address != ""%>
  <div id="location"><h4 class = "ui teal label">Location:</h4>&nbsp;&nbsp;<%= "#{@user.address}, #{@user.city}, #{@user.zipcode}, #{@user.country}" %></div>
  <%else%>
    <div id="location"><h4 class = "ui teal label">Location:</h4>&nbsp;&nbsp;<%= "" %></div>
  <%end%>
  <p> </p>
  <div id="zipcode"><h4 class = "ui teal label">Zipcode:</h4>&nbsp;&nbsp;<%= @user.zipcode %></div>
  <p> </p>
  <div id="status"><h4 class = "ui teal label">Status:</h4>&nbsp;&nbsp;<%= @user.status %></div>
  <p> </p>
  <div id="email"><h4 class = "ui teal label">Email:</h4>&nbsp;&nbsp;<%= @user.email %></div>
  <p> </p>
  <div id="phone_number"><h4 class = "ui teal label">Phone Number:</h4>&nbsp;&nbsp;<%= @user.phone_number %></div>
  <p> </p>

  <div id="user_description">
    <div id="description">
      <h4 class = "ui teal label">Description:</h4>&nbsp;&nbsp;<%= @user.description %>
    </div>
  </div>
  
  <p> </p>
  <div id="availability"><h4 class = "ui teal label">Availability:</h4>&nbsp;&nbsp;<%= @user.availability %></div>

</div>

<div class="large-5 columns">
  <div class="row">
    <h4 class = "ui teal label"><%= @user.first_name %>'s Dogs:</h4>
    <div class="right">
      <% if @own_profile %>
        <%= button_to "Add Dog", new_dog_path(), :id => "add_dog_button", :class => "ui primary button", :method => :get %>
      <% end %>
    </div>
</div>
  
  <div class="ui segment">
  <!--<% if @no_dogs %>
    <h1> No Dogs Found </h1>
  <% end %>-->
  <% @user.dogs.each do |dog| %>
  <div class="ui vertical segment">

    <div class="large-3 columns">
      <span class="image">
        <img src="https://encrypted-tbn3.gstatic.com/images?q=tbn:ANd9GcTq-JrbDxIqJCQm0mds0iyAamCDFYdNr1h3_r6Ekt7SNsWMboFE" style="height:100%; width:100%">
      </span>
    </div>

    <div class="large-9 columns">
      <div class="content">
        <div class="ui medium header">
          <%= link_to dog.name, dog_path(dog.id), :method => :get %>
        </div>
        <div class="description">
          <%= dog.motto %>
        </div>
      </div>
    </div>

  </div>
  <% end %>

  </div>
<br />
</div>



